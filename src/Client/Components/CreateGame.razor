<EditForm Model="CreateGameModel" OnValidSubmit="HandleValidSubmit">
    <FluentValidationValidator />
    <div class="form-group">
        <label for="difficulty">Difficulty</label>
        <InputSelect @bind-Value="CreateGameModel.Difficulty" class="form-control" id="difficulty">
            <option selected disabled>Select a difficulty...</option>
            <option value="0">Easy</option>
            <option value="1">Normal</option>
            <option value="2">Hard</option>
            <option value="3">Expert</option>
        </InputSelect>
        <ValidationMessage For="(() => CreateGameModel.Difficulty)" />
    </div>
    <div class="form-group">
        <label for="numberOfQuestions">Number of Questions</label>
        <InputNumber @bind-Value="CreateGameModel.NumberOfQuestions" class="form-control" id="numberOfQuestions" />
        <ValidationMessage For="(() => CreateGameModel.NumberOfQuestions)" />
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</EditForm>
