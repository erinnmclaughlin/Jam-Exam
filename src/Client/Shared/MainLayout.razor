@inherits LayoutComponentBase
@inject AuthService AuthService 

<AuthorizeView>
    <Authorizing>
        <p>Authorizing...</p>
    </Authorizing>
    <NotAuthorized>
        <Client.Pages.Authorization.Login />
    </NotAuthorized>
    <Authorized>
        <div class="page">
            <div class="sidebar">
                <NavMenu />
            </div>

            <div class="main">
                <div class="top-row px-4">
                    <a href="http://blazor.net" target="_blank" class="ml-md-auto">About</a>
                    <a @onclick="AuthService.Logout">Log out</a>
                </div>

                <div class="content px-4">
                    @Body
                </div>
            </div>
        </div>

    </Authorized>
</AuthorizeView>
