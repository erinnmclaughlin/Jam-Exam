@page "/"

@if (Playlists is null)
{
    <Loader LoadText="Loading jams..." />
}
else
{
    <div style="display: flex; flex-direction: column; max-height: 100%; overflow: hidden">
        <h1 style="flex-grow: 0; flex-shrink: 0">Select a Genre</h1>
        <hr />
        <div style=" max-height: 100%; overflow: hidden">
            <PlaylistList Playlists="@Playlists" />
        </div>
    </div>
}
