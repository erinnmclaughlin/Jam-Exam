@page "/play-game"
@using Blazored.Typeahead

@if (Tracks is null)
{
    <Loader LoadText="Tuning the guitar..." />
}
else
{
    <BlazoredTypeahead SearchMethod="@SearchService.SearchArtists" Debounce="500" @bind-Value="SelectedArtist" placeholder="Search artists...">
        <SelectedTemplate>
            @context?.Name
        </SelectedTemplate>
        <ResultTemplate>
            @context.Name
        </ResultTemplate>
        <NotFoundTemplate>
            Sorry, there weren't any search results.
        </NotFoundTemplate>
    </BlazoredTypeahead>

    <button @onclick="NextTrack">Next track</button>
}


<MusicPlayer @ref="_player" Url="@GetCurrentTrack()?.PreviewUrl" />